<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">

      <a class="navbar-brand" href="/products">Mi Tienda</a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">

        <ul class="navbar-nav ms-auto">

          <!-- Productos -->
          <li class="nav-item">
            <a class="nav-link" href="/products">Productos</a>
          </li>

          <!-- Carrito -->
          <li class="nav-item">
            <a class="nav-link" href="/cart">
              ðŸ›’ Carrito
              {{#if cartCount}}
                <span class="badge bg-success">{{cartCount}}</span>
              {{/if}}
            </a>
          </li>

          <!-- Mostrar login / logout dinÃ¡mico -->
          {{#if currentUser}}
            <!-- Perfil -->
            <li class="nav-item">
              <a class="nav-link" href="/users/current">
                ðŸ‘¤ {{currentUser.first_name}}
              </a>
            </li>

            <!-- Logout -->
            <li class="nav-item">
              <form action="/api/users/logout" method="POST">
                <button class="btn btn-outline-light ms-3">Salir</button>
              </form>
            </li>

          {{else}}
            <!-- Login -->
            <li class="nav-item">
              <a class="nav-link" href="/users/login">Ingresar</a>
            </li>

            <!-- Register -->
            <li class="nav-item">
              <a class="nav-link" href="/users/register">Registrarse</a>
            </li>
          {{/if}}

        </ul>

      </div>
    </div>
  </nav>
  <!-- FIN NAVBAR -->

  <div class="container mt-4">
    {{{body}}}
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>