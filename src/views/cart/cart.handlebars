<h1>Mi Carrito</h1>

{{#if cart.products.length}}
  <ul class="list-group">
    {{#each cart.products}}
      <li class="list-group-item d-flex justify-content-between">
        <span>
          {{this.productId.title}} â€” ${{this.productId.price}}
        </span>
        <strong>x {{this.quantity}}</strong>
      </li>
    {{/each}}
  </ul>

  <form action="/cart/clear" method="POST" class="mt-3">
    <button class="btn btn-danger">Vaciar carrito</button>
  </form>
{{else}}
  <p>No tienes productos en el carrito.</p>
{{/if}}