{{#if cart.products.length}}
<div class="row mt-4">
  {{#each cart.products}}
  <div class="col-4">
    <div class="card mb-4">
      <div class="card-body">
        <h5>{{this.productId.title}}</h5>
        <p>Cantidad: {{this.quantity}}</p>
        <p>Precio: ${{this.productId.price}}</p>
        <p>Total: ${{multiply this.quantity this.productId.price}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<form action="/cart/clear" method="POST">
  <button class="btn btn-danger">Vaciar carrito</button>
</form>

{{else}}
<p>No tienes productos en el carrito.</p>
{{/if}}