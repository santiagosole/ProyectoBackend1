<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container my-5">
    <h1 class="mb-4">Tu Carrito</h1>

    {{#if products.length}}
    <table class="table table-bordered bg-white">
      <thead class="table-dark">
        <tr>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody id="cartBody">
        {{#each products}}
        <tr data-id="{{this.product._id}}">
          <td>{{this.product.title}}</td>
          <td>${{this.product.price}}</td>
          <td>
            <input type="number" class="form-control quantity-input" value="{{this.quantity}}" min="0">
          </td>
          <td class="subtotal">${{multiply this.product.price this.quantity}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <h3>Total: $<span id="cartTotal">{{total}}</span></h3>

    <button id="updateCartBtn" class="btn btn-primary">Actualizar carrito</button>

    {{else}}
    <p>Tu carrito está vacío.</p>
    {{/if}}
  </div>

  <script>
    const cartId = "{{cartId}}";

    async function updateCart() {
      const tbody = document.getElementById("cartBody");
      const rows = tbody.querySelectorAll("tr");
      const products = [];

      let total = 0;

      rows.forEach(row => {
        const pid = row.dataset.id;
        const qty = parseInt(row.querySelector(".quantity-input").value);
        const price = parseFloat(row.querySelector(".subtotal").textContent.replace("$", ""));
        products.push({ productId: pid, quantity: qty });
        total += price * qty / qty; // subtotal original dividido por cantidad original
      });

      // Actualizar carrito en backend
      await fetch(`/api/carts/${cartId}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ products })
      });

      // Refrescar vista
      window.location.reload();
    }

    document.getElementById("updateCartBtn").addEventListener("click", updateCart);
  </script>

</body>
</html>
