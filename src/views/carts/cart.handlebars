<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Mi Tienda</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
          <li class="nav-item"><a class="nav-link" href="/products">Productos</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h1 class="mb-4">Tu Carrito</h1>
    <div class="row" id="cartContainer">
      {{#if products.length}}
        {{#each products}}
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="{{this.product.thumbnails.[0]}}" class="card-img-top" alt="{{this.product.title}}">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{this.product.title}}</h5>
              <p class="card-text">{{this.product.description}}</p>
              <p class="card-text">Precio unitario: ${{this.product.price}}</p>
              <div class="d-flex justify-content-between align-items-center mt-auto">
                <div class="input-group">
                  <button class="btn btn-sm btn-secondary decreaseBtn" data-id="{{this.product._id}}">-</button>
                  <span class="mx-2 quantity">{{this.quantity}}</span>
                  <button class="btn btn-sm btn-secondary increaseBtn" data-id="{{this.product._id}}">+</button>
                </div>
                <strong>$<span class="subtotal">{{multiply this.product.price this.quantity}}</span></strong>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      {{else}}
        <p>Tu carrito está vacío</p>
      {{/if}}
    </div>

    <div class="mt-4 text-end">
      <h3>Total: $<span id="cartTotal">{{total}}</span></h3>
    </div>
  </div>

  <script>
    const cartId = "{{cartId}}";

    const refreshCart = async () => {
      const res = await fetch(`/api/carts/${cartId}`);
      const data = await res.json();

      const cartContainer = document.getElementById('cartContainer');
      const cartTotalEl = document.getElementById('cartTotal');

      if(!data.products.length){
        cartContainer.innerHTML = '<p>Tu carrito está vacío</p>';
        cartTotalEl.textContent = 0;
        return;
      }

      cartContainer.innerHTML = '';
      let totalPrice = 0;

      data.products.forEach(item => {
        totalPrice += item.product.price * item.quantity;

        const div = document.createElement('div');
        div.classList.add('col-md-4', 'mb-4');

        div.innerHTML = `
          <div class="card h-100">
            <img src="${item.product.thumbnails[0]}" class="card-img-top" alt="${item.product.title}">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">${item.product.title}</h5>
              <p class="card-text">${item.product.description}</p>
              <p class="card-text">Precio unitario: $${item.product.price}</p>
              <div class="d-flex justify-content-between align-items-center mt-auto">
                <div class="input-group">
                  <button class="btn btn-sm btn-secondary decreaseBtn" data-id="${item.product._id}">-</button>
                  <span class="mx-2 quantity">${item.quantity}</span>
                  <button class="btn btn-sm btn-secondary increaseBtn" data-id="${item.product._id}">+</button>
                </div>
                <strong>$<span class="subtotal">${item.product.price * item.quantity}</span></strong>
              </div>
            </div>
          </div>
        `;

        cartContainer.appendChild(div);
      });

      cartTotalEl.textContent = totalPrice;

      document.querySelectorAll('.increaseBtn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const pid = btn.dataset.id;
          await fetch(`/api/carts/${cartId}/product/${pid}/increment`, { method: 'POST' });
          refreshCart();
        });
      });
      document.querySelectorAll('.decreaseBtn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const pid = btn.dataset.id;
          await fetch(`/api/carts/${cartId}/product/${pid}/decrement`, { method: 'POST' });
          refreshCart();
        });
      });
    };

    document.addEventListener('DOMContentLoaded', refreshCart);
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
