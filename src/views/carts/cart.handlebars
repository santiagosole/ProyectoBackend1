<h1 class="mb-4">Tu Carrito</h1>

{{#if products.length}}
<table class="table">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Subtotal</th>
      <th>Acción</th>
    </tr>
  </thead>
  <tbody id="cartBody">
    {{#each products}}
    <tr data-id="{{this.product._id}}">
      <td>{{this.product.title}}</td>
      <td>${{this.product.price}}</td>
      <td><input class="form-control quantity-input" type="number" value="{{this.quantity}}" min="0"></td>
      <td class="subtotal">${{multiply this.product.price this.quantity}}</td>
      <td>
        <button class="btn btn-danger btn-sm remove-product">Eliminar</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h3>Total: $<span id="cartTotal">{{total}}</span></h3>
<button id="updateCartBtn" class="btn btn-primary">Actualizar carrito</button>
<button id="clearCartBtn" class="btn btn-warning">Vaciar carrito</button>

{{else}}
<p>Tu carrito está vacío.</p>
{{/if}}